mixin delivery(districts)
    -var i = 0
    for row in districts
        if (i == 0)
            .col.col-3.col-lg-6.col-md-12.delivery__card--first
                .delivery__card
                    for v, k in row[0]
                        +deliveryPrint(k,v,i)
                        -i++
            .col-1.hide-lg
                .delivery__line
            
        else if (i == 8)
            .col-1.hide-lg.delivery__card--last
                .delivery__line
            .col.col-3.col-lg-6.col-md-12
                .delivery__card
                    for v, k in row[0]
                        +deliveryPrint(k,v,i)
                        -i++
        else
            .col.col-4.col-lg-12.col-md-12.delivery__card--middle
                .delivery__card
                    for v, k in row[0]
                        +deliveryPrint(k,v,i)
                        -i++
    
        
        

mixin deliveryPrint(address, price, i)
    .delivery__district
        span.delivery__inp
            input(type="radio", name="district", id=`district-${i}`, value=`${price}`) 
            label(for=`district-${i}`) #{address}
        span.delivery__price #{price} грн. 
            br




