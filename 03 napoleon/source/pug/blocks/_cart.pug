script.
    document.addEventListener('DOMContentLoaded',function() {

        let quantity = document.querySelectorAll('.item__quantity');
        console.log(quantity);
        for (let i = 0; i < quantity.length; i++){
            quantity[i].onchange = updatePrice(i);
            quantity[i].addEventListener('change',function(){updatePrice(i)});

        }
    },false)

    function updatePrice(i){
        let price = document.querySelectorAll('.item__price')[i].textContent.split(" ")[0];
        let quantity = document.querySelectorAll('.item__quantity')[i].value;
        let total = price * quantity;
        document.querySelectorAll('.item__total')[i].textContent = total  + ' грн.';
    }